<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="assets/style/bulma.min.css" type="text/css">
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
	<link rel="stylesheet" href="assets/style/custom.css" type="text/css">
  <link rel="stylesheet" href="assets/style/buefy.min.css">
  <script src="assets/js/myScripts.js"></script>
  <script src="assets/js/buefy-min.js"></script>
  <title><%=title%></title>
</head>
<body>
    <% include assets/partials/top-nav %>

    <!-- hero -->
    <section class="hero is-primary is-bold">
      <div class="hero-body">
        <div class="container">
          <h1 class="title">
            Welcome to Clinic Plus
          </h1>
          <h2 class="subtitle">
            I hope you are having a great day!
          </h2>
        </div>
      </div>
    </section>


    <!-- body -->
  	<div class="content-body">
  		<div class=" is-desktop">
  		  <!-- <div style="border:2px solid red; height:100%;">top</div> -->
  		</div>

      <div class="columns">

        <% include assets/partials/menu-panel %>


        <!-- right coloumn -->
        <div class="column ">
          <div style="a:2px; text-align:left; margin-bottom:25px;">
            <% include assets/partials/menu-nav %>
            <!-- this content -->

            <!-- table -->
            <table class="table is-striped">
        <tr>
          <th>ID</th>
          <th>USERNAME</th>
          <th>PASSWORD</th>
          <th>ROLE</th>
          <th>SALT</th>

        </tr>
        <% for(let data=0; data<data_UsersToEjs.length; data++) {%>
          <tr>
            <th>
              <%= data_UsersToEjs[data].id %>
            </th>
            <td>
              <%= data_UsersToEjs[data].username %>
            </td>
            <td>
              <%= data_UsersToEjs[data].password %>
            </td>
            <td style="color:#00d1b2;">
              <%= data_UsersToEjs[data].role %>
            </td>
            <td>
              <%= data_UsersToEjs[data].salt %>
            </td>

              <th>

              </th>
              <td style="margin-left:-5px;">
                <a class="button is-info is-outlined is-small" href='user/edit/<%=data_UsersToEjs[data].id%>'>
                  <span>Edit</span>
                  <span class="icon is-small">
                    <i class="fa fa-pencil"></i>
                  </span>
                </a>
                <a class="button is-danger is-outlined is-small" href="user/delete/<%=data_UsersToEjs[data].id%>" onclick="myFunction()">
                  <span>Delete</span>
                  <span class="icon is-small">
                    <i class="fa fa-times"></i>
                  </span>
                </a>
              </td>
          </tr>
          <%}%>
      </table>

            <div style="text-align:left; margin-top:35px;">
             <a class="button is-outlined" href='/user/add'>add user</a>
           </div>


            <!-- this content -->
          </div>
        </div>
      </div>
      <!-- body-left-right -->

  	</div>
    <% include assets/partials/footer %>
    <script>
      function myFunction() {
        confirm("are you sure?!");
        // swal ( "Oops" ,  "Something went wrong!" ,  "error" )
        swal({
          icon: "success",
        });
      }
    </script>
</body>
</html>
