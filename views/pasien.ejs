<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="assets/style/bulma.min.css" type="text/css">
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
	<link rel="stylesheet" href="assets/style/custom.css" type="text/css">
  <link rel="stylesheet" href="assets/style/buefy.min.css">
  <title><%=title%></title>
</head>
<body>
  <header>
		<div class="container">
			<% include assets/partials/top-nav %>
		</div>
	</header>

  <!-- hero -->
    <section class="hero is-primary is-bold">
      <div class="hero-body">
        <div class="container">
          <h1 class="title">
            Welcome to Clinic Plus
          </h1>
          <h2 class="subtitle">
            I hope you are having a great day!
          </h2>
        </div>
      </div>
    </section>

	<div style="margin-top: 3%; margin-bottom: 3%;" class="container-cust">
		<div id="sidebar">
			<div class="sidebar__inner">
				<% include assets/partials/menu-panel %>
			</div>
		</div>


		<div id="content">
      <div style="a:2px; text-align:left; margin-bottom:25px;">
        <h1 style=" color: black; font-size:36px; margin-bottom:13px;">All Pasien Data</h1>
        <% include assets/partials/menu-nav %>
      </div>
      <!-- this content -->
      <!-- table -->
      <table style="width:100%; margin-top:12px;" class="table is-striped">
        <tr>
          <th><abbr title="Position">ID</abbr></th>
          <th>NAME</th>
          <th>GENDER</th>
          <th>USIA</th>
          <th>PEKERJAAN</th>
          <!-- <th>ADDRESS</th> -->
          <th>RIWAYAT</th>
          <th>ACTIONS</th>
        </tr>
          <%for(var i = 0; i < data_pasienToEjs.length;i++) {%>
          <tr>
            <th><%=data_pasienToEjs[i].id%></th>
            <td><%=data_pasienToEjs[i].name%></td>
            <% gender = ''
            if(data_pasienToEjs[i].jeniskelamin === 'Pria'){
              gender = 'fa fa-mars'
            }else{
              gender = 'fa fa-venus'
            }%>
            <td  style="color:#00d1b2;">
              <span class="icon">
                <i class="<%=gender%>"></i>
              </span>
              <span>
                <%=data_pasienToEjs[i].jeniskelamin%>
              </span>
            </td>
            <td><%=data_pasienToEjs[i].usia%></td>
            <td><%=data_pasienToEjs[i].pekerjaan%></td>
            <!-- <td><%=data_pasienToEjs[i].alamat%></td> -->

            <td style="margin-left:-5px;">
              <a class="button is-success is-outlined is-small" href='/pasien/riwayat/<%=data_pasienToEjs[i].id%>'>
              <span class="icon is-small">
                <i class="fa fa-history"></i>
              </span>
              <span>Riwayat</span>
              </a>
            </td>

            <td style="margin-left:-5px;">
              <a class="button is-info is-outlined is-small" href='/pasien/edit/<%=data_pasienToEjs[i].id%>'>
              <span class="icon is-small">
                <i class="fa fa-pencil"></i>
              </span>
              <span>Edit</span>
              </a>
              <a onclick="myFunction()" class="button is-danger is-outlined is-small" href="/pasien/delete/<%=data_pasienToEjs[i].id%>">
              <span class="icon is-small">
                <i class="fa fa-times"></i>
              </span>
              <span>Delete</span>
              </a>
            </td>
          </tr>
          <%}%>
      </table>



      <div style="text-align:left; margin-top:35px;">
       <a class="button is-outlined" href='/pasien/add'>add pasien</a>
     </div>
      <!-- this content -->
		</div>
	</div>

	<footer>
		 <% include assets/partials/footer %>
	</footer>
    <% include assets/partials/sticky %>

    <script>
      function myFunction() {
        confirm("are you sure?!");
        // swal ( "Oops" ,  "Something went wrong!" ,  "error" )
        swal({
          icon: "success",
        });
      }
    </script>

</body>
</html>
